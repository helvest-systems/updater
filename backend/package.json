{
  "private": true,
  "name": "helvest-updater",
  "version": "0.1.2",
  "license": "MIT",
  "description": "Desktop application for updating Helvest devices",
  "author": "Helvest Developers <support@helvest.ch>",
  "repository": {
    "type": "git",
    "url": "https://github.com/helvest-systems/updater.git"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s clean compile frontend-*",
    "frontend-build": "pushd ../frontend && yarn build && popd",
    "frontend-copy": "mkdir -p build/frontend && cp -r ../frontend/build/* build/frontend",
    "pack": "yarn build && electron-builder -wm",
    "dist": "yarn build && electron-builder -wm -p always",
    "clean": "rimraf build/* dist/*",
    "compile": "tsc",
    "electron": "cross-env NODE_ENV=development electron .",
    "start": "DEBUG_COLORS=1 FORCE_COLOR=1 run-p watch-*",
    "postinstall": "electron-builder install-app-deps",
    "watch-build": "tsc --watch",
    "watch-electron": "onchange -i -k 'build/**/*' -- yarn electron"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "electron-updater": "^4.2.0",
    "gitly": "^1.1.3",
    "is-online": "^8.2.1",
    "node-intelhex": "^2.0.4",
    "rimraf": "^3.0.2",
    "serialport": "^8.0.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/electron": "^1.6.10",
    "@types/node": "^13.7.1",
    "@types/rimraf": "^2.0.3",
    "cross-env": "^7.0.0",
    "dotenv": "^8.2.0",
    "electron": "7.1.12",
    "electron-builder": "^22.3.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "typescript": "^3.7.5",
    "wait-on": "^4.0.0"
  }
}
